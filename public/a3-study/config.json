{
  "$schema": "https://raw.githubusercontent.com/revisit-studies/study/main/src/parser/StudyConfigSchema.json",
  "studyMetadata": {
    "title": "Cleveland-McGill Replication Study",
    "version": "pilot",
    "authors": [
      "Zachary Medailleu",
      "Gabriel Olafsson"
    ],
    "date": "2026-02-16",
    "description": "An assessment to test which type of visualizations are clearest to read at a glance",
