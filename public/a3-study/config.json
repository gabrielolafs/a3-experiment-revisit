  "components": {
    "introduction": {
      "type": "markdown",
      "path": "a3-study/introduction.md",
      "response": []
    },
    "bar-chart": {
      "type": "website",
      "path": "a3-study/assets/barchart.html",
      "instruction": "Answer the question below.",
      "style": {
        "width": "600px"
      },
      "response": [
        {
          "id": "guess-percent",
          "prompt": "What is the difference in percentage between the smaller value (marked with a red arrow) and the larger value (marked with a black arrow)?",
          "required": true,
          "location": "belowStimulus",
          "type": "shortText",
          "placeholder": "Enter percent here"
        },
        {
          "id": "true-percent",
          "prompt": "",
          "required": false,
          "location": "belowStimulus",
          "type": "reactive",
          "hidden": true
        }
      ],
      "provideFeedback": false,
      "allowFailedTraining": true,
      "trainingAttempts": 1
    },
    "pie-chart": {
      "type": "website",
      "path": "a3-study/assets/piechart.html",
      "instruction": "Answer the question below.",
      "style": {
        "width": "600px"
      },
      "response": [
        {
          "id": "guess-percent",
          "prompt": "What is the difference in percentage between the smaller value (marked with a red circle) and the larger value (marked with a black circle)?",
          "required": true,
          "location": "belowStimulus",
          "type": "shortText",
          "placeholder": "Enter number here"
        }
      ],
      "provideFeedback": false,
      "allowFailedTraining": true,
      "trainingAttempts": 1
    },
    "stacked-bar-chart": {
      "type": "website",
